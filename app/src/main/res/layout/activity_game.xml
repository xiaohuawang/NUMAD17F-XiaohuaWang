<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.neu.madcourse.xiaohuawang.GameActivity">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/background2"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical">

      <fragment
          android:id="@+id/fragment_game"
          class="edu.neu.madcourse.xiaohuawang.GameFragment"
          android:layout_width="wrap_content"
          android:name="edu.neu.madcourse.xiaohuawang.GameFragment"
          android:layout_height="wrap_content"
          tools:layout="@layout/fragment_game"/>
      <!-- Control fragment goes here... -->

      <ToggleButton
          android:id="@+id/button_toggle"
          android:layout_width="130dp"
          android:layout_height="wrap_content"
          android:elevation="@dimen/elevation_low"
          android:textOn="Music On"
          android:textOff="Music Off"
          android:checked="true"
          android:textAllCaps="false"
          android:layout_gravity="right"
          android:layout_marginRight="9dp"/>


   </LinearLayout>

   <include layout="@layout/thinking"/>

</FrameLayout>
